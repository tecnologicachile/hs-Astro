---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import MainLayout from '../components/Layout.tsx';
import Hero from '../components/Hero.astro';
import LogoCarousel from '../components/LogoCarousel.tsx';
import Services from '../components/Services.tsx';
import Features from '../components/Features.tsx';
import CTA from '../components/CTA.tsx';
---

<Layout
	title="Hosting Softland ERP Chile - Especialistas #1"
	description="Soluciones de hosting profesional en Chile para e-commerce y Softland ERP. 20+ años de experiencia, servidores optimizados y soporte técnico especializado."
	canonical="/"
>
	<MainLayout client:load>
		<Hero />
		<LogoCarousel client:load />
		<Services client:load />
		<Features client:load />
		<CTA client:load />
	</MainLayout>
</Layout>
