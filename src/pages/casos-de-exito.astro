---
import Layout from '../layouts/Layout.astro';
import MainLayout from '../components/Layout.tsx';
import PageHero from '../components/PageHero.tsx';
import CaseStudyCard from '../components/CaseStudyCard.tsx';
import Button from '../components/Button.tsx';
import { ExternalLink, Building2, ShoppingCart, Cloud, Server, Calculator } from 'lucide-react';

const caseStudies = [
	{
		companyName: "Tritec SpA",
		description: "TRITEC opera su tienda online en el datacenter de HostingSistemas, aprovechando la tecnología LiteSpeed para una experiencia de usuario superior. Adicionalmente, han implementado la integración de Softland con ERPSync, optimizando su gestión empresarial.",
		logoSrc: "/logos/tritec.webp",
		logoAlt: "Tritec SpA Logo",
		industry: "Tecnología",
		websiteUrl: "https://tritec.cl"
	},
	{
		companyName: "Surdent",
		description: "SURDENT ha implementado Softland en la nube, conectando eficientemente sus sucursales a través de ERPSync. Esta integración clave mejora su coordinación y gestión empresarial, logrando una operatividad más centralizada y efectiva a nivel nacional.",
		logoSrc: "/logos/surdent.webp",
		logoAlt: "Surdent Logo",
		industry: "Salud",
		websiteUrl: "https://surdent.cl"
	},
	{
		companyName: "RefriChile",
		description: "Refrichile opera Softland en un servidor cloud, con conexión nacional. Sus vendedores en terreno acceden al servidor a través de Terminal Server, facilitando la comunicación y la gestión de datos en tiempo real, mejorando así la eficiencia y coordinación de su equipo de ventas.",
		logoSrc: "/logos/refrichile.png",
		logoAlt: "RefriChile Logo",
		industry: "Industrial",
		websiteUrl: "https://refrichile.cl"
	},
	{
		companyName: "Punto Exacto",
		description: "Punto Exacto, empresa de contabilidad, mejoró su eficiencia y seguridad con nuestros servicios de Hosting de Softland. La migración a la nube fue rápida y sin interrupciones, optimizando sus operaciones contables y administrativas para ofrecer un servicio más preciso a sus clientes.",
		logoSrc: "/logos/punto-exacto.webp",
		logoAlt: "Punto Exacto Logo",
		industry: "Contabilidad"
	},
	{
		companyName: "Clandent",
		description: "Clandent impulsa su e-commerce en HostingSistemas, utilizando tecnología LiteSpeed y Redis para una experiencia rápida y fluida. Han añadido respaldos y seguridad avanzada, junto con la integración de herramientas de gestión, optimizando así sus operaciones empresariales.",
		logoSrc: "/logos/clandent.webp",
		logoAlt: "Clandent Logo",
		industry: "Salud"
	},
	{
		companyName: "Sagita",
		description: "Sagita opera su tienda online con hosting optimizado en HostingSistemas, aprovechando tecnología LiteSpeed para garantizar velocidad y estabilidad en sus transacciones online. Su plataforma e-commerce ofrece una experiencia de compra fluida y confiable para sus clientes.",
		logoSrc: "/logos/sagita.png",
		logoAlt: "Sagita Logo",
		industry: "E-commerce",
		websiteUrl: "https://tienda.sagita.cl"
	}
];
---

<Layout 
	title="Casos de Éxito Hosting Chile - Clientes Satisfechos"
    description="Casos de éxito de hosting en Chile: Tritec, Surdent y RefriChile. Implementaciones optimizadas de e-commerce y Softland ERP."
	keywords="casos exito hosting chile, testimonios hosting chile, clientes hosting chile, referencias hosting ecommerce"
	canonical="/casos-de-exito"
>
	<MainLayout client:load>
		<PageHero 
			client:load
			title="Casos de Éxito" 
			subtitle="Resultados Tangibles: Nuestro Impacto en Clientes"
		/>

		<!-- Cases Grid -->
		<div class="bg-gray-50/30 py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<!-- Section Header -->
				<div class="text-center mb-16">
					<p class="text-hs-blue font-semibold text-sm uppercase tracking-wide mb-4">Nuestros Clientes</p>
					<h1 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-6">
						Empresas que Confían en Nosotros
					</h1>
					<p class="text-lg text-gray-600 max-w-2xl mx-auto">
						Desde startups hasta empresas consolidadas, ayudamos a organizaciones de todos los sectores a alcanzar sus objetivos digitales.
					</p>
				</div>
				
				<!-- Grid -->
				<div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8 lg:gap-12">
					{caseStudies.map((caseStudy) => (
						<CaseStudyCard
							client:load
							key={caseStudy.companyName}
							{...caseStudy}
						/>
					))}

					</div>
				</div>
			</div>
		</div>

		<!-- CTA Section -->
		<div class="bg-white py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-4xl text-center">
					<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl mb-8">
						¿Listo para ser nuestro próximo caso de éxito?
					</h2>
					<p class="text-xl leading-8 text-gray-600 mb-10">
						Únete a empresas líderes que han transformado sus operaciones con nuestras soluciones especializadas.
					</p>
					<a href="/contacto" class="inline-flex items-center rounded-xl bg-gradient-to-r from-hs-blue to-hs-blue-light px-8 py-4 text-base font-semibold text-white shadow-lg hover:shadow-xl hover:from-hs-blue-light hover:to-hs-blue-lighter transform hover:scale-105 transition-all duration-300">
						Solicitar Cotización
						<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</MainLayout>
</Layout>
