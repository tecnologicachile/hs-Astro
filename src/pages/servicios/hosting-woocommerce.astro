---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import MainLayout from '../../components/Layout.tsx';
import ServiceHero from '../../components/services/ServiceHero.tsx';
import ServiceFeatures from '../../components/services/ServiceFeatures.tsx';
import ServiceBackups from '../../components/services/ServiceBackups.tsx';
import EcommerceComparison from '../../components/services/WooCommerceComparison.tsx';
import ServiceBenefits from '../../components/services/ServiceBenefits.tsx';
import ServiceCTA from '../../components/services/ServiceCTA.tsx';
import ServiceFAQ from '../../components/services/ServiceFAQ.tsx';

const ecommerceFaqs = [
  {
    question: "¿Qué incluye el hosting para e-commerce?",
    answer: "Nuestro hosting incluye servidores optimizados para plataformas de e-commerce (WooCommerce, PrestaShop, Magento), certificado SSL gratuito, CDN, respaldos automáticos diarios, soporte técnico especializado 24/7, y configuración optimizada para máximo rendimiento."
  },
  {
    question: "¿Cuánto tiempo toma migrar mi tienda existente?",
    answer: "La migración típicamente toma entre 24-48 horas. Nuestro equipo técnico se encarga de todo el proceso sin interrumpir tu tienda, realizando la migración durante horarios de menor tráfico."
  },
  {
    question: "¿Ofrecen soporte para problemas específicos de e-commerce?",
    answer: "Sí, nuestro equipo está especializado en plataformas de e-commerce. Podemos ayudarte con optimización de plugins, configuración de pagos, problemas de rendimiento y cualquier consulta técnica relacionada con tu tienda."
  },
  {
    question: "¿Qué medidas de seguridad incluyen para tiendas online?",
    answer: "Implementamos firewall avanzado, monitoreo de malware 24/7, certificados SSL, respaldos automáticos, actualizaciones de seguridad, y protección DDoS para garantizar la máxima seguridad de tu tienda."
  }
];
---

<Layout 
	title="Hosting E-commerce Chile - WooCommerce, PrestaShop, Magento + Softland ERP"
	description="Hosting E-commerce Chile especializado: WooCommerce, PrestaShop, Magento, Jumpseller. Integración Softland ERP, SSL gratuito, CDN y soporte 24/7 para tu tienda online."
	keywords="hosting ecommerce chile, hosting woocommerce chile, hosting prestashop chile, hosting magento chile, hosting jumpseller chile, hosting tienda online chile, integracion ecommerce erp"
	canonical="/servicios/hosting-woocommerce"
>
	<!-- Service Schema for E-commerce Hosting -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Hosting E-commerce Chile",
		"description": "Hosting especializado para tiendas online en Chile: WooCommerce, PrestaShop, Magento, Jumpseller con servidores optimizados, SSL gratuito y soporte técnico 24/7",
		"provider": {
			"@type": "Organization",
			"name": "Hosting Sistemas",
			"url": "https://hostingsistemas.cl"
		},
		"serviceType": "Web Hosting",
		"areaServed": {
			"@type": "Country",
			"name": "Chile"
		},
		"offers": {
			"@type": "Offer",
			"description": "Hosting E-commerce optimizado",
			"priceCurrency": "CLP",
			"availableAtOrFrom": {
				"@type": "Place",
				"addressCountry": "CL"
			}
		},
		"hasOfferCatalog": {
			"@type": "OfferCatalog",
			"name": "Hosting E-commerce",
			"itemListElement": [
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "SSL Certificado Gratuito"
					}
				},
				{
					"@type": "Offer", 
					"itemOffered": {
						"@type": "Service",
						"name": "CDN Incluido"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service", 
						"name": "Soporte 24/7"
					}
				}
			]
		}
	}
	</script>

	<MainLayout client:load>
		<ServiceHero 
			client:load 
			iconName="ShoppingCart"
			title="Hosting optimizado para E-commerce"
			subtitle="Acelera tu tienda online con soporte experto especializado."
			ctaText="Solicitar Cotización"
		/>
		<ServiceFeatures 
			client:load
			title="Eficiencia y seguridad para el crecimiento de tu tienda online"
			description="Nuestro Hosting E-commerce, compatible con WooCommerce, PrestaShop, Magento, Jumpseller y desarrollos personalizados, maximiza el potencial de tu tienda en línea."
			features={[
				{
					icon: "TrendingUp",
					title: "Optimización para alto tráfico",
					description: "Maneja picos de tráfico sin problemas con nuestra infraestructura escalable y optimizada, garantizando velocidad constante siempre."
				},
				{
					icon: "Shield",
					title: "Protección integral de datos",
					description: "Seguridad avanzada con certificados SSL, firewalls y monitoreo constante 24/7, protegiendo tu tienda contra amenazas y ataques maliciosos."
				},
				{
					icon: "RefreshCw",
					title: "Actualizaciones y mantenimiento automáticos",
					description: "Mantén tu plataforma de e-commerce (WooCommerce, PrestaShop, Magento) siempre actualizada sin interrumpir tu negocio, con parches de seguridad automáticos."
				},
				{
					icon: "Headphones",
					title: "Soporte técnico 24/7",
					description: "Equipo especializado en plataformas de e-commerce (WooCommerce, PrestaShop, Magento, Jumpseller) disponible cuando lo necesites, con soluciones expertas."
				}
			]}
			gridCols={2}
			backgroundGradient="bg-gradient-to-br from-white via-blue-50 to-gray-50"
		/>
		<ServiceBackups 
			client:load
			title="Respaldos seguros y confiables para tu tienda online"
			description="Garantiza la continuidad y seguridad de tu negocio en línea con nuestros respaldos automáticos."
			features={[
				{
					icon: "Clock",
					title: "Respaldos automáticos",
					description: "Copias de seguridad cada 24 horas sin intervención manual requerida."
				},
				{
					icon: "Zap",
					title: "Recuperación express",
					description: "Restaura tu tienda en minutos con sistema de recuperación express."
				},
				{
					icon: "Cloud",
					title: "Almacenamiento seguro",
					description: "Respaldos en múltiples ubicaciones geográficas con total seguridad."
				},
				{
					icon: "Settings",
					title: "Gestión simplificada",
					description: "Panel intuitivo para gestionar y programar respaldos fácilmente."
				}
			]}
		/>
		<EcommerceComparison client:load />
		<ServiceBenefits 
			client:load
			title="Características y beneficios"
			description="Soluciones de hosting superiores con tecnología avanzada y servicio excepcional."
			benefits={[
				{
					icon: "Zap",
					title: "Velocidad superior",
					description: "Asegura una operación ágil y veloz de tu comercio electrónico, fundamental para satisfacer a tus clientes y aumentar las ventas exitosas."
				},
				{
					icon: "TrendingUp",
					title: "Crecimiento sin límites",
					description: "Ajusta sin esfuerzo tu alojamiento web conforme expandes tu empresa digital, soportando mayor tráfico e información sin sacrificar la velocidad."
				},
				{
					icon: "ShieldCheck",
					title: "Protección profesional",
					description: "Resguarda las operaciones e información de tus compradores mediante tecnología de punta, con cifrado SSL y defensas antifraude."
				},
				{
					icon: "LifeBuoy",
					title: "Asistencia experta",
					description: "Ayuda técnica especializada en e-commerce (WooCommerce, PrestaShop, Magento, Jumpseller) con atención individualizada para maximizar tu negocio online."
				}
			]}
			ctaText="Solicitar Hosting E-commerce"
		/>
		<ServiceCTA 
			client:load 
			serviceName="Hosting E-commerce"
			features={["SSL Incluido", "CDN Global", "Respaldos Diarios", "Soporte 24/7"]}
		/>
		<ServiceFAQ 
			client:load 
			serviceName="Hosting E-commerce"
			faqs={ecommerceFaqs}
		/>
	</MainLayout>
</Layout>