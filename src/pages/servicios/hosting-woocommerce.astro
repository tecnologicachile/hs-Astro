---
import Layout from '../../layouts/Layout.astro';
import MainLayout from '../../components/Layout.tsx';
import ServiceHero from '../../components/services/ServiceHero.tsx';
import ServiceFeatures from '../../components/services/ServiceFeatures.tsx';
import ServiceBackups from '../../components/services/ServiceBackups.tsx';
import WooCommerceComparison from '../../components/services/WooCommerceComparison.tsx';
import ServiceBenefits from '../../components/services/ServiceBenefits.tsx';
import ServiceCTA from '../../components/services/ServiceCTA.tsx';
import ServiceFAQ from '../../components/services/ServiceFAQ.tsx';

const woocommerceFaqs = [
  {
    question: "¿Qué incluye el hosting para WooCommerce?",
    answer: "Nuestro hosting incluye servidores optimizados para WooCommerce, certificado SSL gratuito, CDN, respaldos automáticos diarios, soporte técnico especializado 24/7, y configuración optimizada para máximo rendimiento."
  },
  {
    question: "¿Cuánto tiempo toma migrar mi tienda existente?",
    answer: "La migración típicamente toma entre 24-48 horas. Nuestro equipo técnico se encarga de todo el proceso sin interrumpir tu tienda, realizando la migración durante horarios de menor tráfico."
  },
  {
    question: "¿Ofrecen soporte para problemas específicos de WooCommerce?",
    answer: "Sí, nuestro equipo está especializado en WooCommerce. Podemos ayudarte con optimización de plugins, configuración de pagos, problemas de rendimiento y cualquier consulta técnica relacionada con tu tienda."
  },
  {
    question: "¿Qué medidas de seguridad incluyen para tiendas online?",
    answer: "Implementamos firewall avanzado, monitoreo de malware 24/7, certificados SSL, respaldos automáticos, actualizaciones de seguridad, y protección DDoS para garantizar la máxima seguridad de tu tienda."
  }
];
---

<Layout title="Hosting WooCommerce Chile | Optimizado para E-commerce | Hosting Sistemas" description="Hosting especializado para WooCommerce en Chile. Servidores optimizados, SSL gratuito, CDN y soporte experto 24/7. ¡Potencia tu tienda online!">
	<MainLayout client:load>
		<ServiceHero 
			client:load 
			iconName="ShoppingCart"
			title="Hosting optimizado para WooCommerce"
			subtitle="Hosting especializado que acelera tu tienda WooCommerce. Rendimiento superior y soporte experto para tus ventas."
			ctaText="Solicitar Cotización"
		/>
		<ServiceFeatures 
			client:load
			title="Eficiencia y seguridad para el crecimiento de tu tienda online"
			description="Nuestro Hosting WooCommerce, enfocado en eficiencia y seguridad, está diseñado para maximizar el potencial de tu tienda en línea. Disfruta de un rendimiento excepcional, seguridad robusta y una solución escalable que se adapta a las necesidades de tu negocio, permitiéndote enfocarte en su crecimiento."
			features={[
				{
					icon: "TrendingUp",
					title: "Optimización para alto tráfico",
					description: "Maneja picos de tráfico sin problemas con nuestra infraestructura escalable y optimizada."
				},
				{
					icon: "Shield",
					title: "Protección integral de datos",
					description: "Seguridad avanzada con certificados SSL, firewalls y monitoreo constante 24/7."
				},
				{
					icon: "RefreshCw",
					title: "Actualizaciones y mantenimiento automáticos",
					description: "Mantén tu WooCommerce siempre actualizado sin interrumpir tu negocio."
				},
				{
					icon: "Headphones",
					title: "Soporte técnico 24/7",
					description: "Equipo especializado en WooCommerce disponible cuando lo necesites."
				}
			]}
			gridCols={2}
			backgroundGradient="bg-gradient-to-br from-white via-blue-50 to-gray-50"
		/>
		<ServiceBackups 
			client:load
			title="Respaldos seguros y confiables para tu tienda WooCommerce"
			description="Garantiza la continuidad y seguridad de tu negocio en línea con nuestros respaldos automáticos. Diseñados para ofrecer tranquilidad, nuestros sistemas de respaldo aseguran que tu información esté protegida y disponible en todo momento."
			features={[
				{
					icon: "Clock",
					title: "Respaldos diarios automáticos",
					description: "Copias de seguridad automáticas cada 24 horas sin intervención manual."
				},
				{
					icon: "Zap",
					title: "Recuperación rápida",
					description: "Restaura tu tienda en minutos con nuestro sistema de recuperación express."
				},
				{
					icon: "Cloud",
					title: "Almacenamiento seguro en la nube",
					description: "Tus respaldos se guardan en múltiples ubicaciones geográficas para máxima seguridad."
				},
				{
					icon: "Settings",
					title: "Gestión simplificada",
					description: "Panel de control intuitivo para gestionar y programar tus respaldos fácilmente."
				}
			]}
		/>
		<WooCommerceComparison client:load />
		<ServiceBenefits 
			client:load
			title="Características y beneficios"
			description="En Hosting Sistemas, ofrecemos soluciones de hosting superiores con tecnología avanzada y un servicio al cliente excepcional. Eleva tu negocio en línea con nuestra innovación y excelencia."
			benefits={[
				{
					icon: "Zap",
					title: "Alto rendimiento",
					description: "Garantiza un funcionamiento fluido y rápido de tu tienda online, esencial para una excelente experiencia de usuario y mayores conversiones."
				},
				{
					icon: "TrendingUp",
					title: "Escalabilidad y flexibilidad",
					description: "Adapta fácilmente tu hosting a medida que crece tu negocio, con capacidad para manejar más usuarios y datos sin comprometer el rendimiento."
				},
				{
					icon: "ShieldCheck",
					title: "Seguridad especializada",
					description: "Protege las transacciones y datos de tus clientes con seguridad avanzada, incluyendo encriptación SSL y salvaguardas contra fraudes."
				},
				{
					icon: "LifeBuoy",
					title: "Soporte experto",
					description: "Accede a nuestro soporte técnico especializado en WooCommerce, ofreciendo asistencia y personalizaciones para optimizar tu tienda."
				}
			]}
			ctaText="Solicitar Hosting WooCommerce"
		/>
		<ServiceCTA 
			client:load 
			serviceName="Hosting WooCommerce"
			features={["SSL Incluido", "CDN Global", "Respaldos Diarios", "Soporte 24/7"]}
		/>
		<ServiceFAQ 
			client:load 
			serviceName="Hosting WooCommerce"
			faqs={woocommerceFaqs}
		/>
	</MainLayout>
</Layout>