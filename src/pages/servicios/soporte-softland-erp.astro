---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import MainLayout from '../../components/Layout.tsx';
import Breadcrumb from '../../components/Breadcrumb.tsx';
import ServiceHero from '../../components/services/ServiceHero.tsx';
import ServiceFeatures from '../../components/services/ServiceFeatures.tsx';
import ServiceBackups from '../../components/services/ServiceBackups.tsx';
import ServiceBenefits from '../../components/services/ServiceBenefits.tsx';
import ServiceCTA from '../../components/services/ServiceCTA.tsx';
import ServiceFAQ from '../../components/services/ServiceFAQ.tsx';
import RelatedServices from '../../components/services/RelatedServices.tsx';
import RelatedBlogPosts from '../../components/services/RelatedBlogPosts.tsx';
import HowItWorks from '../../components/services/HowItWorks.tsx';
import LastUpdated from '../../components/LastUpdated.tsx';

const soporteFaqs = [
  {
    question: "¿Qué versiones de Softland ERP soportan?",
    answer: "Brindamos soporte a toda la línea ERP y a la línea Pyme de Softland. También ofrecemos asistencia a versiones obsoletas, proporcionando una alternativa confiable a Softland Total y Garantizado."
  },
  {
    question: "¿Cómo puedo acceder al soporte técnico?",
    answer: "Ofrecemos múltiples canales de soporte: telefónico para consultas inmediatas, soporte vía web para generar requerimientos y descargar actualizaciones, y servicios especializados para trabajos específicos."
  },
  {
    question: "¿Realizan migraciones y actualizaciones de versiones?",
    answer: "Sí, nuestro equipo especializado realiza migraciones seguras y actualizaciones de versiones, asegurando el cumplimiento legal, nuevas funcionalidades y tecnología avanzada para eficiencia óptima."
  },
  {
    question: "¿Qué incluye el soporte para trabajos especiales?",
    answer: "Los trabajos especiales incluyen análisis detallados del sistema, migraciones complejas, configuraciones personalizadas y gestión avanzada de datos, todo con la máxima seguridad y eficiencia."
  }
];
---

<Layout
	title="Soporte Softland ERP Chile Especializado - Expertos 20+ Años"
	description="Soporte Softland ERP Chile especializado con 20+ años de experiencia. Asistencia telefónica y web, trabajos especiales, migraciones y actualizaciones. Alternativa confiable a Softland Total."
	canonical="/servicios/soporte-softland-erp"
>
	<!-- BreadcrumbList Schema -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Inicio",
				"item": "https://hostingsistemas.cl"
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": "Servicios",
				"item": "https://hostingsistemas.cl/servicios"
			},
			{
				"@type": "ListItem",
				"position": 3,
				"name": "Soporte Softland ERP",
				"item": "https://hostingsistemas.cl/servicios/soporte-softland-erp"
			}
		]
	}
	</script>

	<!-- Service Schema -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Service",
		"name": "Soporte Técnico Softland ERP Chile",
		"description": "Soporte técnico especializado para Softland ERP con 20+ años de experiencia. Asistencia telefónica, web, migraciones y trabajos especiales",
		"provider": {
			"@type": "Organization",
			"name": "Hosting Sistemas",
			"url": "https://hostingsistemas.cl"
		},
		"serviceType": "Soporte Técnico ERP",
		"areaServed": {
			"@type": "Country",
			"name": "Chile"
		},
		"hasOfferCatalog": {
			"@type": "OfferCatalog",
			"name": "Servicios de Soporte Softland",
			"itemListElement": [
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Soporte Telefónico Especializado"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Soporte Web y Tickets"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Migraciones y Actualizaciones"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Trabajos Especiales y Consultoría"
					}
				}
			]
		}
	}
	</script>

	<!-- FAQPage Schema -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "FAQPage",
		"mainEntity": [
			{
				"@type": "Question",
				"name": "¿Qué versiones de Softland ERP soportan?",
				"acceptedAnswer": {
					"@type": "Answer",
					"text": "Brindamos soporte a toda la línea ERP y a la línea Pyme de Softland. También ofrecemos asistencia a versiones obsoletas, proporcionando una alternativa confiable a Softland Total y Garantizado."
				}
			},
			{
				"@type": "Question",
				"name": "¿Cómo puedo acceder al soporte técnico?",
				"acceptedAnswer": {
					"@type": "Answer",
					"text": "Ofrecemos múltiples canales de soporte: telefónico para consultas inmediatas, soporte vía web para generar requerimientos y descargar actualizaciones, y servicios especializados para trabajos específicos."
				}
			},
			{
				"@type": "Question",
				"name": "¿Realizan migraciones y actualizaciones de versiones?",
				"acceptedAnswer": {
					"@type": "Answer",
					"text": "Sí, nuestro equipo especializado realiza migraciones seguras y actualizaciones de versiones, asegurando el cumplimiento legal, nuevas funcionalidades y tecnología avanzada para eficiencia óptima."
				}
			},
			{
				"@type": "Question",
				"name": "¿Qué incluye el soporte para trabajos especiales?",
				"acceptedAnswer": {
					"@type": "Answer",
					"text": "Los trabajos especiales incluyen análisis detallados del sistema, migraciones complejas, configuraciones personalizadas y gestión avanzada de datos, todo con la máxima seguridad y eficiencia."
				}
			}
		]
	}
	</script>

	<MainLayout client:load>
		<!-- Breadcrumbs -->
		<div class="bg-gray-50 py-3">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<Breadcrumb
					client:load
					items={[
						{ name: "Servicios", href: "/servicios" },
						{ name: "Soporte Softland ERP" }
					]}
				/>
			</div>
		</div>

		<ServiceHero 
			client:load 
			iconName="Headphones"
			title="Soporte continuo y preventivo para Softland"
			subtitle="Soporte experto para optimizar tu Softland ERP."
			ctaText="Solicitar Soporte"
		/>
		
		<ServiceFeatures 
			client:load
			title="Asistencia técnica especializada"
			description="Destacamos por nuestra capacidad de resolver de manera efectiva y eficiente los desafíos técnicos en Softland ERP, asegurando el máximo rendimiento de tu sistema empresarial."
			features={[
				{
					icon: "Zap",
					title: "Diagnóstico rápido y preciso",
					description: "Identificamos problemas técnicos de forma inmediata con herramientas avanzadas de diagnóstico y análisis profundo del sistema."
				},
				{
					icon: "Server",
					title: "Soluciones personalizadas",
					description: "Desarrollamos soluciones específicas adaptadas a las necesidades únicas de tu empresa y configuración de Softland ERP."
				},
				{
					icon: "TrendingUp",
					title: "Mejora continua del sistema",
					description: "Implementamos mejoras constantes para optimizar el rendimiento y mantener tu sistema ERP actualizado y eficiente."
				},
				{
					icon: "Shield",
					title: "Experiencia y expertise",
					description: "Más de 15 años de experiencia especializada en Softland ERP garantizan soluciones profesionales, confiables y de alta calidad."
				}
			]}
			gridCols={2}
			backgroundGradient="bg-gradient-to-br from-gray-50 via-slate-50 to-blue-50"
		/>

		<ServiceBackups 
			client:load
			title="Respaldos y seguridad para tu soporte Softland ERP"
			description="Protege tu sistema ERP con respaldos automáticos especializados y sistemas de seguridad para entornos empresariales críticos."
			features={[
				{
					icon: "Clock",
					title: "Respaldos ERP",
					description: "Copias automáticas de configuraciones y personalizaciones Softland."
				},
				{
					icon: "Zap",
					title: "Recuperación rápida",
					description: "Restauración completa del sistema ERP en minutos con todos los datos empresariales."
				},
				{
					icon: "Cloud",
					title: "Almacenamiento seguro",
					description: "Respaldos encriptados con estándares empresariales en infraestructura dedicada."
				},
				{
					icon: "Settings",
					title: "Monitoreo Continuo",
					description: "Supervisión continua del estado del sistema para prevenir problemas operativos."
				}
			]}
		/>

		<ServiceBenefits 
			client:load
			title="Características y beneficios"
			description="En Hosting Sistemas, proporcionamos soporte especializado para Softland con tecnología avanzada y servicio excepcional. Garantizamos el máximo rendimiento de tu ERP con innovación y excelencia."
			benefits={[
				{
					icon: "Zap",
					title: "Soporte telefónico",
					description: "Nuestro soporte telefónico gestiona tus consultas de Softland eficientemente, garantizando soluciones rápidas y precisas para resolver inconvenientes técnicos inmediatamente."
				},
				{
					icon: "TrendingUp",
					title: "Soporte vía web",
					description: "Accede a servicios en línea como generación de requerimientos y descarga de actualizaciones, todo para una gestión eficaz y autónoma de tu sistema Softland ERP."
				},
				{
					icon: "ShieldCheck",
					title: "Trabajos especiales",
					description: "Nuestro soporte en trabajos especiales proporciona análisis detallados y migraciones seguras, asegurando una gestión de datos eficiente y configuraciones avanzadas."
				},
				{
					icon: "LifeBuoy",
					title: "Actualización de versiones",
					description: "Con las últimas versiones de software, aseguras el cumplimiento legal, nuevas funcionalidades y tecnología avanzada para eficiencia óptima de tu ERP."
				}
			]}
			ctaText="Solicitar Soporte Especializado"
		/>

		<HowItWorks
			client:load
			serviceName="Soporte Softland ERP"
			title="¿Cómo Funciona el Soporte?"
			subtitle="Accede a soporte técnico especializado de forma simple"
			steps={[
				{
					title: "Contacto Inicial",
					description: "Comunícate por teléfono, web o email describiendo tu consulta o problema con Softland ERP."
				},
				{
					title: "Diagnóstico Experto",
					description: "Nuestros especialistas con 20+ años de experiencia analizan tu situación y proponen soluciones."
				},
				{
					title: "Resolución Rápida",
					description: "Implementamos la solución de forma remota o presencial, según la complejidad del caso."
				},
				{
					title: "Seguimiento",
					description: "Verificamos que todo funcione correctamente y documentamos la solución para futura referencia."
				}
			]}
		/>

		<ServiceCTA
			client:load
			serviceName="Soporte Softland ERP"
			features={["Soporte Telefónico", "Asistencia Web", "Trabajos Especiales", "Actualizaciones"]}
		/>
		<ServiceFAQ
			client:load
			serviceName="Soporte Softland ERP"
			faqs={soporteFaqs}
		/>
		<RelatedBlogPosts
			client:load
			serviceId="soporte-softland-erp"
			title="Manuales y Guías de Soporte"
			description="Documentación oficial y guías para resolver consultas frecuentes"
		/>
		<RelatedServices
			client:load
			currentService="/servicios/soporte-softland-erp"
		/>

		<!-- Last Updated -->
		<div class="bg-white py-8">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<LastUpdated client:load />
			</div>
		</div>
	</MainLayout>
</Layout>