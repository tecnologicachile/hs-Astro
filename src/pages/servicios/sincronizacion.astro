---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import MainLayout from '../../components/Layout.tsx';
import Breadcrumb from '../../components/Breadcrumb.tsx';
import ServiceHero from '../../components/services/ServiceHero.tsx';
import ServiceFeatures from '../../components/services/ServiceFeatures.tsx';
import ServiceBackups from '../../components/services/ServiceBackups.tsx';
import ServiceBenefits from '../../components/services/ServiceBenefits.tsx';
import ServiceCTA from '../../components/services/ServiceCTA.tsx';
import ServiceFAQ from '../../components/services/ServiceFAQ.tsx';
import SyncFeatures from '../../components/services/SyncFeatures.tsx';
import SyncTechnology from '../../components/services/SyncTechnology.tsx';

const syncFaqs = [
  {
    question: "¿Qué plataformas son compatibles con ERPSync?",
    answer: "ERPSync es compatible con todas las principales plataformas de eCommerce: WooCommerce, Shopify, PrestaShop, Magento, OpenCart, BigCommerce, Vtex, TiendaNube/Nuvemshop, Jumpseller y muchas más plataformas."
  },
  {
    question: "¿Cuánto tiempo toma implementar ERPSync?",
    answer: "ERPSync cuenta con una implementación ultra-rápida de solo 30-45 minutos desde el inicio hasta estar completamente operativo. Incluye instalación automática, configuración guiada y sincronización inicial."
  },
  {
    question: "¿Cada cuánto tiempo se actualiza la información?",
    answer: "ERPSync realiza actualizaciones automáticas cada 5 minutos entre Softland y tu plataforma eCommerce, manteniendo inventario, pedidos y clientes actualizados en tiempo real."
  },
  {
    question: "¿Hay límites en el número de productos?",
    answer: "No hay límites en el número de productos que puedes sincronizar con ERPSync. El sistema está diseñado para manejar catálogos de cualquier tamaño de manera eficiente."
  },
  {
    question: "¿Funciona con versiones personalizadas de Softland?",
    answer: "Sí, ERPSync se adapta a personalizaciones específicas de Softland previo análisis técnico. También es compatible con diferentes versiones internacionales como Exactus ERP en Costa Rica."
  },
  {
    question: "¿Cuál es el costo de ERPSync y cómo puedo obtener más información?",
    answer: "ERPSync está disponible desde 0.80 UF/mes con tres opciones: mensual (sin compromiso), semestral (18% descuento) y anual (26% descuento). Incluye prueba gratuita de 14 días y configuración inicial sin costo. Visita erpsync.app para información detallada y demostración."
  },
  {
    question: "¿Qué seguridad ofrece ERPSync?",
    answer: "ERPSync utiliza encriptación SSL de 256 bits, conexiones cifradas HTTPS exclusivamente, acceso restringido a URLs autorizadas y validación estructurada de todos los datos para máxima seguridad."
  }
];

const features = [
  'Actualizaciones cada 5 minutos',
  'Implementación 30-45 minutos',
  'Compatible con todas las plataformas',
  'Desde 0.80 UF/mes',
  'Prueba gratuita 14 días',
  'Configuración inicial gratuita'
];
---

<Layout 
	title="ERPSync Chile - Sincronización Automática Softland con Todas las Plataformas eCommerce"
	description="ERPSync sincroniza automáticamente cada 5 minutos tu Softland ERP con WooCommerce, Shopify, PrestaShop, Magento, BigCommerce y más. Desde 0.80 UF/mes, prueba gratis 14 días."
	keywords="erpsync chile, sincronizacion automatica softland, integracion ecommerce softland chile, shopify softland chile, woocommerce erp sync, prestashop softland integracion, magento softland chile"
	canonical="/servicios/sincronizacion"
>
	<MainLayout client:load>
		<!-- Breadcrumbs -->
		<div class="bg-gray-50 py-3">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<Breadcrumb 
					client:load
					items={[
						{ name: "Servicios", href: "/servicios" },
						{ name: "Sincronización E-commerce" }
					]}
				/>
			</div>
		</div>

		<ServiceHero 
			client:load
			iconName="RefreshCw"
			title="ERPSync - Sincronización Automática Softland y Todas las Plataformas eCommerce"
			subtitle="Automatiza la sincronización entre tu ERP Softland y múltiples plataformas de eCommerce. Inventario, pedidos y clientes actualizados cada 5 minutos. Visita erpsync.app para más información."
			ctaText="Probar Gratis 14 días"
		/>
		
		<ServiceFeatures 
			client:load
			title="Compatible con Todas las Plataformas eCommerce"
			description="ERPSync se integra con todas las principales plataformas: WooCommerce, Shopify, PrestaShop, Magento, BigCommerce, Vtex, TiendaNube, Jumpseller y muchas más."
			features={[
				{
					icon: "RefreshCw",
					title: "Actualizaciones cada 5 minutos",
					description: "Sincronización automática entre Softland y tu plataforma eCommerce con conversión automática de pedidos a notas de venta, eliminando errores manuales."
				},
				{
					icon: "Users",
					title: "Gestión automática de clientes",
					description: "Validación automática de clientes en Softland durante la compra, creación automática de nuevos registros y sincronización bidireccional de información."
				},
				{
					icon: "Globe",
					title: "Compatibilidad internacional",
					description: "Funciona con Softland ERP en Chile, Exactus ERP en Costa Rica, Softland ERP en Guatemala y Colombia, y otros países bajo consulta."
				},
				{
					icon: "Zap",
					title: "Implementación ultra-rápida",
					description: "Configuración completa en solo 30-45 minutos: instalación automática, configuración guiada, conexión con Softland y verificación de funcionamiento."
				}
			]}
			gridCols={2}
			backgroundGradient="bg-gradient-to-br from-gray-50 via-slate-50 to-blue-50"
		/>
		
		<ServiceBackups 
			client:load
			title="Seguridad y Confiabilidad ERPSync"
			description="Máxima protección de datos y alta disponibilidad con infraestructura redundante, respaldos automáticos y monitoreo 24/7."
			features={[
				{
					icon: "Shield",
					title: "Encriptación SSL 256 bits",
					description: "Todas las comunicaciones utilizan encriptación SSL de 256 bits con conexiones cifradas HTTPS exclusivamente para máxima seguridad."
				},
				{
					icon: "Lock",
					title: "Acceso restringido autorizado",
					description: "Acceso limitado solo a URLs autorizadas con defensa activa contra amenazas externas y validación estructurada de datos."
				},
				{
					icon: "Server",
					title: "Infraestructura redundante",
					description: "Alta disponibilidad con infraestructura redundante, respaldos programados automáticos y supervisión permanente 24/7."
				},
				{
					icon: "Activity",
					title: "Monitoreo proactivo continuo",
					description: "Supervisión permanente con monitoreo proactivo de incidencias y tiempo de actividad garantizado para operación continua."
				}
			]}
		/>
		
		<SyncTechnology client:load />
		
		<SyncFeatures client:load />
		
		<ServiceBenefits 
			client:load
			title="Más de 50 Empresas Confían en ERPSync"
			description="Clientes satisfechos que han optimizado sus operaciones con ERPSync, desde equipos médicos hasta distribuidores industriales."
			ctaText="Probar Gratis 14 días"
			benefits={[
				{
					title: "Reducción del 90% en gestión manual",
					description: "OrtoTek Punto Dental: 'Excelente plugin para conectar nuestro sitio WordPress-WooCommerce con Softland. Gran soporte.' - Eliminación completa de errores por transcripción.",
					icon: "TrendingDown"
				},
				{
					title: "Automatización total del flujo de ventas", 
					description: "Laboratorios Dermik: 'Gracias a ERP Sync, superamos importantes barreras en nuestro canal de ventas online.' - Optimización de inventarios en tiempo real.",
					icon: "Zap"
				},
				{
					title: "Sincronización perfecta precios y stock",
					description: "Surdent: 'Buena solución para mantener sincronizados precios y stock en Softland. Muy buena experiencia.' - Control preciso en múltiples canales de venta.",
					icon: "RefreshCw"
				},
				{
					title: "Conexiones eficientes y estables",
					description: "Forsend: 'Nuestra experiencia con ERPSync ha sido excelente. El sistema es eficiente y las conexiones funcionan perfectamente.' - Escalabilidad sin costos adicionales.",
					icon: "CheckCircle"
				}
			]}
		/>
		
		<ServiceCTA 
			client:load
			serviceName="ERPSync - Sincronización Automática"
			features={features}
		/>
		
		<ServiceFAQ 
			client:load
			serviceName="ERPSync - Sincronización Automática"
			faqs={syncFaqs}
		/>
	</MainLayout>
</Layout>