---
import Layout from '../../layouts/Layout.astro';
import MainLayout from '../../components/Layout.tsx';
import ServiceHero from '../../components/services/ServiceHero.tsx';
import ServiceFeatures from '../../components/services/ServiceFeatures.tsx';
import ServiceBackups from '../../components/services/ServiceBackups.tsx';
import ServiceBenefits from '../../components/services/ServiceBenefits.tsx';
import ServiceCTA from '../../components/services/ServiceCTA.tsx';
import ServiceFAQ from '../../components/services/ServiceFAQ.tsx';
import SyncFeatures from '../../components/services/SyncFeatures.tsx';
import SyncTechnology from '../../components/services/SyncTechnology.tsx';

const syncFaqs = [
  {
    question: "¿Qué es ERPSync y cómo funciona?",
    answer: "ERPSync es una herramienta de integración que sincroniza automáticamente los datos entre tu tienda WooCommerce y Softland ERP. Mantiene actualizado el inventario, precios, clientes y pedidos en tiempo real entre ambos sistemas."
  },
  {
    question: "¿Cuánto tiempo toma implementar la sincronización?",
    answer: "La implementación típicamente toma entre 2-5 días laborales, dependiendo de la complejidad de tu configuración. Incluye análisis inicial, configuración personalizada, pruebas y capacitación del equipo."
  },
  {
    question: "¿La sincronización afecta el rendimiento de mi tienda?",
    answer: "No, ERPSync está diseñado para funcionar en segundo plano sin afectar el rendimiento de tu tienda. Utiliza tecnología optimizada que procesa los datos de manera eficiente y transparente para tus clientes."
  },
  {
    question: "¿Qué datos se sincronizan entre WooCommerce y Softland?",
    answer: "Se sincronizan productos, precios, stock, categorías, clientes, pedidos, métodos de pago y toda la información relevante para mantener ambos sistemas actualizados y coherentes."
  },
  {
    question: "¿Ofrecen soporte durante la implementación?",
    answer: "Sí, proporcionamos soporte completo durante todo el proceso: análisis inicial, configuración, migración de datos, pruebas, capacitación y soporte continuo post-implementación."
  }
];

const features = [
  'Sincronización en tiempo real',
  'Automatización completa',
  'Soporte especializado',
  'Configuración personalizada'
];
---

<Layout title="Sincronización WooCommerce-Softland | ERPSync | Hosting Sistemas" description="Integración perfecta entre WooCommerce y Softland ERP con ERPSync. Sincronización en tiempo real, automatización de procesos y gestión unificada de tu negocio.">
	<MainLayout client:load>
		<ServiceHero 
			client:load
			iconName="RefreshCw"
			title="Conecta tu tienda online WooCommerce con tu sistema Softland ERP"
			subtitle="Integración perfecta entre WooCommerce y Softland ERP. Automatización total con ERPSync para tu negocio."
			ctaText="Solicitar Integración"
		/>
		
		<ServiceFeatures 
			client:load
			title="Capacidades de sincronización ERPSync"
			description="ERPSync ofrece una integración completa entre WooCommerce y Softland ERP, automatizando procesos críticos y manteniendo la consistencia de datos entre ambos sistemas para optimizar tu operación comercial."
			features={[
				{
					icon: "RefreshCw",
					title: "Sincronización en tiempo real",
					description: "Actualización instantánea de inventarios, precios y pedidos entre WooCommerce y Softland ERP sin intervención manual."
				},
				{
					icon: "Shield",
					title: "Transferencia segura de datos",
					description: "Protección completa de la información durante el proceso de sincronización con encriptación y validación de datos."
				},
				{
					icon: "Zap",
					title: "Automatización completa",
					description: "Reducción de errores manuales mediante automatización de procesos de inventario, clientes y transacciones."
				},
				{
					icon: "Server",
					title: "Integración bidireccional",
					description: "Sincronización en ambas direcciones permitiendo gestión desde WooCommerce o Softland según las necesidades operativas."
				}
			]}
			gridCols={2}
			backgroundGradient="bg-gradient-to-br from-gray-50 via-slate-50 to-blue-50"
		/>
		
		<ServiceBackups 
			client:load
			title="Respaldos seguros para tu integración ERPSync"
			description="Protege la integridad de tus datos sincronizados con sistemas de respaldo automáticos diseñados específicamente para integraciones WooCommerce-Softland, garantizando continuidad y seguridad operacional."
			features={[
				{
					icon: "Clock",
					title: "Respaldos automáticos de configuración",
					description: "Copias de seguridad automáticas de todas las configuraciones de sincronización para restauración rápida en caso necesario."
				},
				{
					icon: "Zap",
					title: "Recuperación rápida de datos",
					description: "Restauración inmediata de la sincronización y configuraciones sin pérdida de datos críticos del negocio."
				},
				{
					icon: "Cloud",
					title: "Almacenamiento seguro en la nube",
					description: "Respaldos encriptados almacenados en múltiples ubicaciones para máxima protección de la información de integración."
				},
				{
					icon: "Settings",
					title: "Monitoreo de integridad",
					description: "Verificación continua de la consistencia de datos entre WooCommerce y Softland para prevenir discrepancias."
				}
			]}
		/>
		
		<SyncTechnology client:load />
		
		<SyncFeatures client:load />
		
		<ServiceBenefits 
			client:load
			title="Características y beneficios de la sincronización WooCommerce con Softland"
			description="En HostingSistemas.cl, nos especializamos en ofrecer una sincronización superior entre WooCommerce y Softland. Nuestra solución integra tecnología avanzada y un servicio al cliente excepcional para elevar tu negocio en línea."
			ctaText="Solicitar Cotización"
			benefits={[
				{
					title: "Integración en tiempo real",
					description: "ERPSync mantiene tus datos entre WooCommerce y Softland actualizados en tiempo real, mejorando la toma de decisiones y precisión",
					icon: "Zap"
				},
				{
					title: "Mejora en la gestión del inventario", 
					description: "ERPSync ofrece un control preciso del inventario, asegurando seguimiento exacto y evitando desajustes de stock.",
					icon: "TrendingUp"
				},
				{
					title: "Automatización de procesos",
					description: "Optimiza tus operaciones al automatizar tareas estratégicas, reduciendo errores significativos y ahorrando tiempo valioso",
					icon: "ShieldCheck"
				},
				{
					title: "Soporte experto",
					description: "Accede a nuestro soporte técnico especializado en WooCommerce y Softland, brindando asistencia y personalizaciones para optimizar tu tienda y sistema ERP",
					icon: "LifeBuoy"
				}
			]}
		/>
		
		<ServiceCTA 
			client:load
			serviceName="Sincronización WooCommerce-Softland"
			features={features}
		/>
		
		<ServiceFAQ 
			client:load
			serviceName="Sincronización WooCommerce-Softland"
			faqs={syncFaqs}
		/>
	</MainLayout>
</Layout>