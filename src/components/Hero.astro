---
// Hero.astro - Static component for better performance
import { Shield, ArrowRight } from 'lucide-react';
---

<div class="relative bg-gradient-to-br from-hs-blue via-hs-blue to-hs-blue-light py-16 sm:py-24 lg:py-32 min-h-[60vh] flex items-center overflow-hidden">
	<!-- Background decoration -->
	<div class="absolute inset-0 overflow-hidden">
		<div class="absolute -top-40 -right-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
		<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
	</div>

	<div class="relative mx-auto max-w-5xl px-6 lg:px-8 text-center">
		<!-- Badge -->
		<div class="hero-animate mb-8 inline-flex items-center rounded-full bg-white/20 px-4 py-2 text-sm text-white font-medium backdrop-blur-sm">
			<Shield className="w-4 h-4 mr-2" />
			20+ años especializados en Softland ERP
		</div>

		<!-- Main Headline -->
		<h1 class="hero-animate hero-delay-1 text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
			<span class="bg-gradient-to-r from-yellow-200 to-amber-300 bg-clip-text text-transparent">Hosting Softland ERP</span>
			<br class="hidden sm:block" />
			<span class="sm:block">especializado en Chile</span>
		</h1>

		<!-- Subtitle - shortened and more impactful -->
		<p class="hero-animate hero-delay-2 text-lg sm:text-xl text-blue-100 mb-8 sm:mb-12 max-w-2xl mx-auto leading-relaxed">
			Servidores Windows optimizados con sincronización e-commerce exclusiva para WooCommerce, PrestaShop y Magento. Soporte técnico experto 24/7.
		</p>

		<!-- CTA Buttons - swapped priority for lead generation -->
		<div class="hero-animate hero-delay-3 flex flex-col sm:flex-row justify-center gap-4">
			<a
				href="/contacto"
				class="group inline-flex items-center justify-center font-semibold rounded-xl px-8 py-4 text-lg bg-white text-hs-blue shadow-lg hover:bg-gray-50 hover:shadow-xl transform hover:scale-105 transition-all duration-300"
			>
				Consulta Gratuita
				<ArrowRight className="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform" />
			</a>
			<a
				href="/servicios"
				class="inline-flex items-center justify-center font-semibold rounded-xl px-8 py-4 text-lg bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white hover:bg-white/20 hover:border-white/50 transition-all duration-300"
			>
				Ver Servicios
			</a>
		</div>
	</div>
</div>

<style>
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero-animate {
		animation: fadeInUp 0.6s ease-out forwards;
	}

	.hero-delay-1 {
		opacity: 0;
		animation-delay: 0.1s;
	}

	.hero-delay-2 {
		opacity: 0;
		animation-delay: 0.2s;
	}

	.hero-delay-3 {
		opacity: 0;
		animation-delay: 0.3s;
	}
</style>
